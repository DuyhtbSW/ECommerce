@model ECommerce.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Register";
}

<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <form asp-action="Register" enctype="multipart/form-data">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6" style="margin-top:30px">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase"> registration form</h3>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                                <input asp-for="@Model.MaKh" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                            <label asp-for="@Model.MaKh" class="form-label" for="form3Example1m"></label>
                                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                                <input asp-for="@Model.MatKhau" type="password" id="form3Example1m" class="form-control form-control-lg" />
                                                <label asp-for="@Model.MatKhau" class="form-label" for="form3Example1m"></label>
                                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="@Model.Email" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                        <label asp-for="@Model.Email" class="form-label" for="form3Example1m"></label>
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                                <input asp-for="@Model.HoTen" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                                <label asp-for="@Model.HoTen" class="form-label" for="form3Example1m"></label>
                                                <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div data-mdb-input-init class="form-outline">
                                                <input asp-for="@Model.NgaySinh"   class="form-control form-control-lg" />
                                                <label asp-for="@Model.NgaySinh" class="form-label"></label>
                                                <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="@Model.DiaChi" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                        <label asp-for="@Model.DiaChi" class="form-label" for="form3Example1m"></label>
                                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                                </div>

                                    <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">
                                        <h6 class="mb-0 me-4">Giới tính:</h6>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input class="form-check-input" type="radio" name="GioiTinh" id="femaleGender" value="false" />
                                            <label class="form-check-label" for="femaleGender">Nữ</label>
                                        </div>

                                        <div class="form-check form-check-inline mb-0 me-4">
                                            <input class="form-check-input" type="radio" name="GioiTinh" id="maleGender" value="true" />
                                            <label class="form-check-label" for="maleGender">Nam</label>
                                        </div>
                                    </div>



                                <div data-mdb-input-init class="form-outline mb-4">
                                        <input asp-for="@Model.DienThoai" type="text" id="form3Example1m" class="form-control form-control-lg" />
                                        <label asp-for="@Model.DienThoai" class="form-label" for="form3Example1m"></label>
                                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                                </div>

                              

                                <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="file" name="Hinh" class="form-control form-control-lg" />
                                        <label for="Hinh" class="form-label" for="form3Example1m">Hinh Anh</label>
                                </div>

                              

                                <div class="d-flex justify-content-end pt-3">
                                    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-light btn-lg">Dang Ky lai</button>
                                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-lg ms-2">Dang Ky Tai Khoan</button>
                                </div>

                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
